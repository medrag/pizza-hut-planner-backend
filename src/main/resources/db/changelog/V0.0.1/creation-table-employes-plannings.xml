<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">


    <!-- Change set for table emp-plan creation -->
    <changeSet author="MRA" id="08052020-ajout-emp-plan-001" context="INIT">
        <createTable tableName="employes_plannings">
            <column name="emp_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="plan_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- changeSet for many to one relationship with employees and plannings -->
    <changeSet author="MRA" id="08052020-ajout-emp-plan-002" context="INIT">
        <addUniqueConstraint tableName="employes_plannings"
                             columnNames="emp_id, plan_id"
                             constraintName="emp_plan_pk" />
    </changeSet>


    <!-- changeSet pour les donnÃ©es de test -->
    <changeSet author="MRA" id="08052020-ajout-emp-plan-003"  context="TEST">
        <loadData encoding="UTF-8"
                  file="db/fakedata/EMP_PLAN_DATA.csv"
                  schemaName="public"
                  separator=","
                  tableName="employes_plannings"
                  usePreparedStatements="true">
        </loadData>
    </changeSet>

</databaseChangeLog>
