<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">


    <!-- Change set for table periodes creation -->
    <changeSet author="MRA" id="08052020-ajout-plannings-001" context="INIT">

        <createTable tableName="plannings">

            <column autoIncrement="true" name="plan_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="plan_semaine" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="emp_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

        </createTable>

    </changeSet>

    <!--  changeSet pour l'index sur la clé primaire -->
    <changeSet author="MRA" id="08052020-ajout-plannings-002" context="INIT">
        <createIndex indexName="idx_plan_id" tableName="plannings" unique="true">
            <column name="plan_id"/>
        </createIndex>
    </changeSet>

    <!-- changeSet for employee foreign key -->
    <!-- One to many relationship between employee and planning-->
    <changeSet author="MRA" id="08052020-ajout-plannings-003" context="INIT">
        <addForeignKeyConstraint
                baseTableName="plannings"
                baseColumnNames="emp_id"
                constraintName="plan_emp_id_fk"
                referencedTableName="employes"
                referencedColumnNames="emp_id"/>
    </changeSet>

    <!-- changeSet pour les données de test -->
    <changeSet author="MRA" id="08052020-ajout-plannings-004"  context="TEST">
        <loadData encoding="UTF-8"
                  file="db/fakedata/PLANNINGS_DATA.csv"
                  schemaName="public"
                  separator=","
                  tableName="plannings"
                  usePreparedStatements="true">
        </loadData>
    </changeSet>

</databaseChangeLog>
